<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi phản hồi"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:backgroundTint="#919191"
        android:id="@+id/btnFeedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi phản hồi tại đây"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/titleFeedback"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleFeedback"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:textSize="15dp"
        android:hint="Cảm ơn vì tin nhắn. Phản hồi của anh/chị rất quan trọng với chúng tôi để chúng tôi có thể hoàn thiện tốt hơn."
        android:id="@+id/txtFeedback" />

</RelativeLayout>